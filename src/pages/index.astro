---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation";
import Hero from "../components/Hero";
import SignatureHighlights from "../components/SignatureHighlights";
import TourShowcase from "../components/TourShowcase";
import Testimonials from "../components/Testimonials";
import AboutRenate from "../components/AboutRenate.astro";
import Concierge from "../components/Concierge.astro";
import Footer from "../components/Footer";
import { getTours } from "../data/tours";
import { getReviews } from "../data/reviews";

const tours = await getTours();
const reviews = await getReviews();
const meta = {
  title: "Just Lisbon — Luxe privétours in Lissabon & Sintra",
  description:
    "Curated high-end privétours en experiences voor Nederlandse reizigers in Lissabon, Sintra en Cascais.",
};
---

<BaseLayout title={meta.title} description={meta.description}>
  <Navigation variant="hero" />
  <Hero />
  <!-- <SignatureHighlights /> -->
  <TourShowcase tours={tours} />
  <Testimonials reviews={reviews} />
  <AboutRenate />
  <Concierge />
  <Footer />
</BaseLayout>
