---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation";
import Hero from "../components/Hero";
import TourShowcase from "../components/TourShowcase";
import Testimonials from "../components/Testimonials";
import Faq from "../components/Faq.astro";
import AboutRenate from "../components/AboutRenate.astro";
import Concierge from "../components/Concierge.astro";
import Footer from "../components/Footer";
import { getTours } from "../data/tours";
import { getReviews } from "../data/reviews";
import { getFaqs } from "../data/faqs";
import { buildFaqJsonLd } from "../lib/structuredData/faq";
import { buildTourListJsonLd } from "../lib/structuredData/tourList";

const tours = await getTours();
const reviews = await getReviews();
const faqs = await getFaqs();
const meta = {
  title: "Nederlandse gids in Lissabon & Sintra — Privé tours | Just Lisbon",
  description: "Lissabon & Sintra ontdekken met een lokale Nederlandse gids.",
};
const faqJsonLd = buildFaqJsonLd(faqs);
const tourListJsonLd = buildTourListJsonLd(tours, { siteUrl: Astro.site });
---

<BaseLayout
  title={meta.title}
  description={meta.description}
  imageAlt="Luxe privétours in Lissabon en Sintra met Nederlandse gids"
  jsonLd={[faqJsonLd, tourListJsonLd]}
>
  <Navigation variant="hero" />
  <Hero />
  <!-- <SignatureHighlights /> -->
  <TourShowcase tours={tours} />
  <Testimonials reviews={reviews} />
  <Faq faqs={faqs} />
  <AboutRenate />
  <Concierge />
  <Footer />
</BaseLayout>
